= launch_chat_fab(background, color)

#chat
  #chat__blur_filter
  #chat__background_filter
  .chat__header
    .chat__settings
      %div
      %div
    .chat__flex
    %h6 Chat
    .chat__flex
    = material_icon.close.css_class('chat__close')
  = render 'chat/conversations/new'
  .chat__list
    = render 'chat/conversations/index'
  = link_to nil, class: 'chat__start-new' do
    = material_icon.add
  .current_chat
